  <script>
    // Sinh dropdown ƒë·ªông
    const countries = ["Vi·ªát Nam", "M·ªπ", "Nh·∫≠t B·∫£n", "H√†n Qu·ªëc", "Anh", "Ph√°p"];
    const dynamicDropdown = document.getElementById("dynamicDropdown");

    countries.forEach(country => {
      const option = document.createElement("option");
      option.value = country.toLowerCase();
      option.textContent = country;
      dynamicDropdown.appendChild(option);
    });

    // X·ª≠ l√Ω ki·ªÉm tra
    function checkSelection() {
      const fruit = document.getElementById("staticDropdown").value;
      const country = document.getElementById("dynamicDropdown").value;
      const result = document.getElementById("result");

      if (fruit && country) {
        result.textContent = `‚úÖ B·∫°n ch·ªçn: ${fruit.toUpperCase()} v√† ${country.toUpperCase()}`;
      } else {
        result.textContent = "‚ö†Ô∏è Vui l√≤ng ch·ªçn ƒë·∫ßy ƒë·ªß c·∫£ 2 m·ª•c!";
      }
    }
  </script>
