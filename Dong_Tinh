    <select id="staticDropdown">
      <option value="">-- Ch·ªçn m·ªôt lo·∫°i tr√°i c√¢y --</option>
      <option value="apple">T√°o</option>
      <option value="banana">Chu·ªëi</option>
      <option value="mango">Xo√†i</option>
    </select>

    <h2>‚ö° Drop-down ƒê·ªông</h2>
    <select id="dynamicDropdown">
      <option value="">-- Ch·ªçn m·ªôt qu·ªëc gia --</option>
    </select>

    <br>
    <button onclick="checkSelection()">Ki·ªÉm tra</button>

    <p id="result"></p>
